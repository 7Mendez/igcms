<% if content_for(:title).present? %>
  <header class="bg-white shadow">
    <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
      <div class="flex items-center gap-x-3">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">
          <%= content_for(:title) || "Iglesia CMS" %>
        </h1>
        <% if content_for(:count).present? %>
          <span class="px-3 py-1 text-xs text-blue-600 bg-blue-100 rounded-full dark:bg-gray-800 dark:text-blue-400"><%= content_for(:count) %></span>
        <% end %>
      </div>
    </div>
  </header>
<% end %>

<% if content_for(:title_label).present? && content_for(:title_content).present? %>
  <header class="bg-white shadow">
    <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
      <div class="flex justify-between">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">
          <%= content_for(:title_label)%>
        </h1>
        <%= content_for(:title_content) %>
      </div>
    </div>
  </header>
<% end %>

<% if content_for(:custom_title).present? %>
  <header class="bg-white shadow">
    <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
      <%= content_for(:custom_title) %>
    </div>
  </header>
<% end %>
