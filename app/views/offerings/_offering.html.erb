<div id="<%= dom_id offering %>">
  <div class="grid grid-cols-1 gap-6 mt-10 sm:grid-cols-2">
    <p class="text-gray-700 dark:text-gray-200"><strong>Cantidad:</strong> <%= offering.amount %></p>
    <p class="text-gray-700 dark:text-gray-200"><strong>Tipo de ofrenda:</strong> <%= offering.offering_type %></p>
    <p class="text-gray-700 dark:text-gray-200 col-span-1"><strong>Fecha:</strong> <%= l(offering.date, format: :long) if offering.date %></p>
    <p class="text-gray-700 dark:text-gray-200"><strong>Nota:</strong> <%= offering.note %></p>
    <p class="text-gray-700 dark:text-gray-200"><strong>Miembro:</strong> <%= offering&.member&.name || '-' %></p>
  </div>
</div>
