<section class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md dark:bg-gray-800">
  <h1 class="text-lg font-semibold text-gray-700 capitalize dark:text-white">Detalles de la ofrenda</h1>
  <div class="py-3"></div>
  <hr class="border-gray-200 dark:border-gray-700">
  <%= render partial: 'offering', locals: { offering: @offering } %>

  <div class="flex justify-between mt-10 space-x-4">
    <div class="ml-4">
      <%= link_to url_for(action: :destroy, id: @offering.id), data: {turbo_method: :delete, turbo_confirm: '¿Estás seguro de que deseas eliminar esta ofrenda?'}, class: "px-8 py-2.5 leading-5 text-white transition-colors duración-300 transform bg-red-700 rounded-md hover:bg-red-600 focus:outline-none focus:bg-red-600" do %>
        <i class="fas fa-trash-alt"></i>
        Eliminar esta ofrenda
      <% end %>
    </div>
    <div class="flex space-x-4">
      <%= link_to edit_offering_path(@offering), class: "px-8 py-2.5 leading-5 text-white transition-colors duración-300 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600" do %>
        <i class="fas fa-edit"></i> Editar esta ofrenda
      <% end %>
      <%= link_to offerings_path, class: "px-8 py-2.5 leading-5 text-white transition-colors duración-300 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600" do %>
        <i class="fas fa-arrow-left"></i> Volver a ofrendas
      <% end %>
    </div>
  </div>
</section>
