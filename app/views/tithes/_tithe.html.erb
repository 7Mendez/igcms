<div id="<%= dom_id tithe %>">
  <div class="grid grid-cols-1 gap-6 mt-10 sm:grid-cols-2">
    <p class="text-gray-700 dark:text-gray-200"><strong>Cantidad:</strong> <%= tithe.amount %></p>
    <p class="text-gray-700 dark:text-gray-200"><strong>Nota:</strong> <%= tithe.note %></p>
    <p class="text-gray-700 dark:text-gray-200 col-span-1"><strong>Fecha:</strong> <%= l(tithe.date, format: :long) %></p>
    <p class="text-gray-700 dark:text-gray-200"><strong>Miembro:</strong> <%= tithe.member.name %></p>
  </div>
</div>
