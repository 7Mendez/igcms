<div id="<%= dom_id member %>">
  <div class="grid grid-cols-1 gap-6 mt-10 sm:grid-cols-2">
    <p class="text-gray-700 dark:text-gray-200"><strong>Nombre:</strong> <%= @member.name %></p>
    <p class="text-gray-700 dark:text-gray-200"><strong>Activo:</strong> <%= @member.status ? 'Sí' : 'No' %></p>
    <p class="text-gray-700 dark:text-gray-200 col-span-1"><strong>Fecha de Bautismo:</strong> <%= l(@member.baptism_date, format: :long) %></p>
    <p class="text-gray-700 dark:text-gray-200"><strong>Lleno con el Espíritu Santo:</strong> <%= @member.holy_spirit ? 'Sí' : 'No' %></p>
    <p class="text-gray-700 dark:text-gray-200"><strong>Visitante:</strong> <%= @member.visitor ? 'Sí' : 'No' %></p>
  </div>
</div>
